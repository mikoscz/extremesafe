{{create-event newEvent='newEvent'}}

{{#each model as |event|}}
  {{#paper-card as |card|}}
      {{card.image src="images/event_ph.png" alt="Washed Out" title="Washed Out"}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}{{event.name}}{{/text.headline}}
        {{/title.text}}
      {{/card.title}}
      {{#card.content}}
        <p>
          {{event.description}}
        </p>
      {{/card.content}}
      {{#card.actions}}
        {{#paper-button iconButton=true}}{{paper-icon "favorite"}}{{/paper-button}}
        {{#paper-button iconButton=true}}{{paper-icon "settings"}}{{/paper-button}}
        {{#paper-button iconButton=true}}{{paper-icon "share"}}{{/paper-button}}
      {{/card.actions}}
    {{/paper-card}}
{{/each}}

{{outlet}}
