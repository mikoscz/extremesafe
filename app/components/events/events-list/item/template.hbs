{{#paper-card as |card|}}
    {{card.image src="/assets/images/event_ph.png" alt="Washed Out" title="Washed Out" click=(action 'toEvent' event)}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}{{event.name}}{{/text.headline}}
      {{/title.text}}
    {{/card.title}}
    {{#card.content}}
      <p>
        {{event.description}}
      </p>
    {{/card.content}}
    {{#card.actions}}
      {{#if canJoin}}
        {{#paper-button iconButton=true}}{{paper-icon "favorite"}}{{/paper-button}}
      {{/if}}

      {{#unless canJoin}}
        {{#paper-button iconButton=true}}{{paper-icon "edit"}}{{/paper-button}}
        {{#paper-button iconButton=true onClick=(action 'remove' event)}}{{paper-icon "delete"}}{{/paper-button}}
      {{/unless}}
    {{/card.actions}}
  {{/paper-card}}
